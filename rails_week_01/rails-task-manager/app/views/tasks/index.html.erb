<%= link_to "New task", new_task_path, class: "link__new" %>
<div class="content">
  <h2>My tasks</h2>
  <ul class="tasks">
    <% @tasks.each do |task| %>
      <li class="tasks__item">
        <%= form_with model: task, class: "tasks" do |f| %>
          <%= f.check_box :completed, onchange: "this.form.submit();"%>
        <% end %>
        <%= link_to task.title, task_path(task) %>
        <%= link_to "Edit", edit_task_path(task), class: "link__edit" %>
      </li>
    <% end %>
  </ul>
</div>