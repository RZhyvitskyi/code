<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= form_with model: task do |f| %>
        <%= f.check_box :completed, onchange: "this.form.submit();"%>
        <%= link_to task.title, task_path(task) %>
      <% end %>
    </li>
  <% end %>
</ul>
<br>
<%= link_to "New task", new_task_path %>