<%= link_to "Back", tasks_path, class: "link__back" %>
<div class="content">
  <div class="task">
    <h2>
      <%= @task.title %>
    </h2>
    <p>
      <%= @task.details%>
    </p>
    <%= check_box_tag @task.id, @task.completed, @task.completed %>
    <%= link_to "Delete", task_path(@task), data: {turbo_method: :delete}, class: "link__delete" %>
  </div>
</div>