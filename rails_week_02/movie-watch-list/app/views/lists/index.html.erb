<h2 class="mb-5">Welcome, <%= @user.name %></h2>
<h3 class="mb-3">Your lists:</h3>
<ul class="list-group mb-3">
  <% @user.lists.each do |list| %>
    <%= link_to list, class: "list-group-item w-50" do %>
      <div class="d-flex justify-content-between align-items-center">
        <h4 class="m-0"><%= list.name %></h4>
        <%= button_to "Delete list", list, method: :delete, class: "btn btn-danger" %>
      </div>
    <% end %>  
  <% end %>
</ul>
<%= link_to "Add list", new_list_path, class: "btn btn-secondary" %>
