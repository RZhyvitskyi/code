
<h2 class="mb-5"><%= @list.name %></h2>
<div class="mb-3 row row-cols-1 row-cols-md-2 g-3">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="col">
      <div class="card mb-3">
        <div class="row g-0">
          <div class="col-md-4">
            <%= image_tag bookmark.movie.poster_url, class: "img-fluid rounded-start" %>
          </div>
          <div class="col-md-8 position-relative">
            <div class="card-body">
              <h5 class="card-title"><%= bookmark.movie.title %></h5>
              <p class="card-text">
                <span class="text-muted">My comments:</span>
                <%= bookmark.comment %>
              </p>
            </div>
            <div class="card_delete">
              <%= button_to "Delete bookmark", bookmark, method: :delete, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div>
  <%= link_to "Back", lists_path, class: "btn btn-primary me-3" %>
  <%= link_to "Add movie", new_list_bookmark_path(@list), class: "btn btn-secondary" %>
</div>
