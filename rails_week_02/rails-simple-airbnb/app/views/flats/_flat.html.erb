<div class="col-md-4">
  <div class="card">
    <%= image_tag flat.picture_url, class: "card-img-top" %>
    <div class="card-body">
      <h5 class="card-title"><%= flat.name %></h5>
      <p class="card-text"><%= flat.price_per_night %></p>
      <%= link_to "Show this flat", flat, class: "btn btn-secondary" %>
    </div>
  </div>
</div>